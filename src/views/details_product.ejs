<%- include('./layouts/header.ejs') %>

<div class="row">

    <h1 class="page-header"><%= title %> </h1>

    <div class="col-xs-12 col-md-5">
        <img class="spi" src="/product_images/<%= product.id %>/<%= product.image %>" alt="">
    </div> 

    <div class="col-xs-12 col-md-7">
        <p><%= product.description %> </p>
        <p>R$ <%= parseFloat(product.price).toFixed(2) %> </p>
        <p><a href="/cart/add/<%= product.slug %>">Add to cart</a></p>
    </div>

    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach((image,index) => { %>
                <% if (image != "thumbs") { %>
                    <li class="details-images-li">
                        <a data-fancybox="gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>">
                        <img class="imageMouseOver<%= index %> " src="/product_images/<%= product.id %>/gallery/thumbs/<%= image %>" id="<%= index %>">
                    </a>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </div>

</div>

<script>
    
    for (let i = 0; i < 10; i++) {
        $(`img#${i}`).mouseover('over', () => {
            let atr = $(`img#${i}`).attr("src")
            $('img.spi').attr("src", atr)
        });
    }

</script>

<%- include('./layouts/footer.ejs') %>