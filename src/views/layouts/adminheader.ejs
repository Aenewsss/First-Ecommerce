<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Area</title>
  <link rel="icon" href="/icons/icon-r.svg">
  <link rel="stylesheet" href="/stylesheets/css/admin.css" type="text/css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
  <script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>
</head>

<body>

  <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/" target="_blank">Roupas Flash</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/admin/pages">Pages</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/admin/categories">Categories</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/admin/products">Products</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/admin/users">Users</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container" style="margin-top: 20px;">
  <%- messages('messages', locals) %>

  <% if(errors){ %>
    <% errors.forEach(error => {  %>
      <div class="alert alert-danger">
        <%= error.msg %>
      </div>
    <% }) %>
  <% } %>