</head>

<body>

  <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Roupas Flash</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% pages.forEach(page => { %>
            <% if (page.title == 'home') { %>
                <li class="nav-item"><a class="nav-link active" href="/"><%= page.title %></a></li>
                <% } else { %>
                  <li class="nav-item"><a class="nav-link" href="/<%= page.slug %>"><%= page.title %></a></li>
                  <% } %>
                  <% }) %>
              <li class="nav-item"><a class="nav-link" href="/user/login"><i class="bi bi-person"></i></a></li>
        </ul>
        <ul class="navbar-nav cart">
          <li class="nav-item">
            <a class="nav-link" href="/cart/checkout"><i class="bi bi-cart"></i> (
              <% if (typeof cart !== 'undefined') { %>
                <%= cart.length %> 
              <% } else { %>
                  0
              <% } %>
              )</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container" style="margin-top: 20px;">

    <%- messages('messages', locals) %> 

